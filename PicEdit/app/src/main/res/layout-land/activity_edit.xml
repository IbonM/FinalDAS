<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/applogo" />

    <Button
        android:id="@+id/bRotate"
        android:layout_width="94dp"
        android:layout_height="61dp"
        android:layout_marginTop="125dp"
        android:text="@string/rotate"
        app:layout_constraintStart_toEndOf="@+id/bFilter"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bExit"
        android:layout_width="94dp"
        android:layout_height="61dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="3dp"
        android:text="@string/exit"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/bFilter" />

    <Button
        android:id="@+id/bSave"
        android:layout_width="94dp"
        android:layout_height="61dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="60dp"
        android:text="@string/save"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.101"
        app:layout_constraintStart_toEndOf="@+id/bExit"
        app:layout_constraintTop_toBottomOf="@+id/bRotate" />

    <Button
        android:id="@+id/bCut"
        android:layout_width="94dp"
        android:layout_height="61dp"
        android:layout_marginTop="125dp"
        android:text="@string/cut"
        app:layout_constraintStart_toEndOf="@+id/bRotate"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bFilter"
        android:layout_width="94dp"
        android:layout_height="61dp"
        android:layout_marginTop="125dp"
        android:text="@string/filters"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>